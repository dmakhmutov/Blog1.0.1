<!--TITLE-->
<h3><%= @post.title %></h3>

<!--autor name-->
<p>
  <%= @post.name %>
    <!--tags uses-->
  <b>tags:</b>
  <%= raw @post.tag_list.map {|t| link_to t, tag_path(t)}.join(" ,") %>
</p>


<!--content-->
<p>
  <%= @post.content %>
</p>

<h5>Comments</h5>
<%= render @post.comments %>

<h5>Add a comment:</h5>
<%= render "comments/form" %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
